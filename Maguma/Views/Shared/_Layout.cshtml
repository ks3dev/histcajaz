<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Public/CSS/site.css" rel="stylesheet" type="text/css" />
    <script src="~/Public/JavaScript/External/jquery-1.7.1.js"></script>
    <script src="~/Public/JavaScript/External/history.js"></script>
    <script src="~/Public/JavaScript/External/history.adapter.jquery.js"></script>
    <script src="~/Public/JavaScript/External/history.html4.js"></script>
    <script src="~/Public/JavaScript/History.Setup.js"></script>
    <script src="~/Public/JavaScript/Debug.js"></script>
</head>
    <body>
        <header>
            <div id="menu" class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="/">Maguma</a></p>
                </div>
                <div id="debug-spa-check-counter" class="debug-only debug-big">only for debug</div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Another page", "Index", "Elsewhere")</li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="header-edge"></div>
        </header>
        <div id="core">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year</p>
                </div>
                <div class="float-right">
                </div>
            </div>
        </footer>
    </body>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $debug.startGlobalTicker($("#debug-spa-check-counter"));
            $setupHistory.init(window, "#core", "#menu");
        });
    </script>
</html>